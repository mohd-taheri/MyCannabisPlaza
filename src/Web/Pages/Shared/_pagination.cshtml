@model PaginationInfoViewModel
<!-- Pagination
                    ============================================= -->
    <div class="line">
        <ul class="pagination pagination-inside-transparent pagination-sm justify-content-center">
            <li class="page-item disabled">
            <a class="page-link text-muted @Model.Previous"
               id="Previous"
               asp-route-storeid="@(Model.StoreId)"
               asp-route-pageid="@(Model.ActualPage - 1)"
               aria-label="Previous">
                Previous
            </a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Showing @Model.ItemsPerPage of @Model.TotalItems products - Page @(Model.ActualPage + 1) - @Model.TotalPages</a>
            </li>
            <li class="page-item">
                <a class="page-link @Model.Next"
                   id="Next"
                   asp-route-storeid="@(Model.StoreId)"
                   asp-route-pageid="@(Model.ActualPage + 1)"
                   aria-label="Next">
                    Next
                </a>
            </li>
        </ul>

    </div>

